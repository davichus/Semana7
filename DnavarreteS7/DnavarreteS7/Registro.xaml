<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="DnavarreteS7.Registro"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
            <ScrollView>
<StackLayout Padding= "20" Spacing="30">
<Label Text= "Nombre:" />
<Entry Placeholder="Introduce tu nombre" x:Name= "txtNombre"/>
<Label Text="Usuario:"/>
<Entry Placeholder="Escribe tu usuario" Keyboard ="Email" x:Name="txtUsuario"/>
<Label Text="Contraseña: "/>
<Entry Placeholder="Elige una contraseña" IsPassword="True" x:Name="txtContrasenia"/>
<Button x:Name= "btn_agregar" Text="Agregar" Clicked="btn_agregar_Clicked" BackgroundColor="Azure"/>
</StackLayout>
</ScrollView>
    </ContentPage.Content>
</ContentPage>

